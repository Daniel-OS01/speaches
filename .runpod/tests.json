{
  "tests": [
    {
      "name": "Test Health Check",
      "input": {
        "method": "GET",
        "path": "/health"
      },
      "timeout": 30000
    },
    {
      "name": "Test Text-to-Speech",
      "input": {
        "method": "POST",
        "path": "/v1/audio/speech",
        "body": {
          "model": "speaches-ai/en_US-amy-medium",
          "input": "Hello, world! This is a test of the Speaches server on Runpod.",
          "voice": "af_heart"
        }
      },
      "timeout": 60000
    },
    {
      "name": "Test Speech-to-Text",
      "input": {
        "method": "POST",
        "path": "/v1/audio/transcriptions",
        "file_url": "https://github.com/Daniel-OS01/speaches/raw/master/audio.wav",
        "body": {
          "model": "Systran/faster-whisper-tiny.en"
        }
      },
      "timeout": 60000
    },
    {
      "name": "Test List Models",
      "input": {
        "method": "GET",
        "path": "/v1/models"
      },
      "timeout": 30000
    },
    {
      "name": "Test Model Registry",
      "input": {
        "method": "GET",
        "path": "/v1/registry"
      },
      "timeout": 30000
    },
    {
      "name": "Test Voice Activity Detection",
      "input": {
        "method": "POST",
        "path": "/v1/audio/speech/timestamps",
        "file_url": "https://github.com/Daniel-OS01/speaches/raw/master/audio.wav"
      },
      "timeout": 60000
    },
    {
      "name": "Test Dynamic Model Loading",
      "input": {
        "method": "GET",
        "path": "/api/ps"
      },
      "timeout": 30000
    }
  ],
  "config": {
    "gpuTypeId": "NVIDIA GeForce RTX 4090",
    "gpuCount": 1,
    "env": [
      {
        "key": "MODEL_LOAD_TIMEOUT",
        "value": "300"
      },
      {
        "key": "HF_HUB_ENABLE_HF_TRANSFER",
        "value": "1"
      }
    ],
    "allowedCudaVersions": [
      "12.8",
      "12.7",
      "12.6",
      "12.5",
      "12.4",
      "12.3",
      "12.2",
      "12.1",
      "12.0"
    ]
  }
}